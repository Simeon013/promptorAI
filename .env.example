# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe (Phase 3)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_PRICE_STARTER=price_your_starter_price_id
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# App URL (for SEO metadata and production)
# Development: http://localhost:3000
# Production: https://promptor.app (or your domain)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Upstash Redis (Rate Limiting - Phase 5)
# Créez un compte gratuit sur https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Google AdSense (Publicités pour utilisateurs FREE)
# 1. Créez un compte sur https://www.google.com/adsense
# 2. Ajoutez votre site et attendez l'approbation
# 3. Créez des unités publicitaires dans AdSense
# 4. Copiez votre ID client (ca-pub-XXXXXXXXXXXXXXXX)
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# Resend (Email Service)
# 1. Créez un compte gratuit sur https://resend.com
# 2. Ajoutez votre domaine (ou utilisez onboarding.resend.dev pour les tests)
# 3. Générez une API key dans Settings > API Keys
# 4. Créez des audiences dans Dashboard > Audiences
RESEND_API_KEY=re_your_resend_api_key
RESEND_AUDIENCE_ALL_USERS=aud_your_all_users_audience_id
RESEND_AUDIENCE_FREE_USERS=aud_your_free_users_audience_id
RESEND_AUDIENCE_PRO_USERS=aud_your_pro_users_audience_id
RESEND_AUDIENCE_NEWSLETTER=aud_your_newsletter_audience_id
RESEND_AUDIENCE_INACTIVE_USERS=aud_your_inactive_users_audience_id
